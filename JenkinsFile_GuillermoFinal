pipeline{
    agent any
        stages{
            stage("Clonar Repositorio"){
                steps{
                    bat "md C:\\Users\\Academia\\Documents\\DevOps\\Jenkins\\PracticaFinal"
                    bat "cd C:\\Users\\Academia\\Documents\\DevOps\\Jenkins\\PracticaFinal"
                    bat "git clone http://git.javalab.devopsstk.net/guillermo.gastelum/Practica.git"
                    bat "cd C:\\Users\\Academia\\Documents\\DevOps\\Jenkins\\PracticaFinal\\Jenkins"
                }
            }
            stage("Pull y Push al Repositorio"){
                steps{
                    bat "echo EJEMPLO DE PRACTICA 10 >> archivonuevo.txt"
                    bat "git pull"
                    bat "git commit -m "Mensaje de PracticaFinal"
                    bat "git push origin master"
                    bat "git pull"
                }
            }
        }
}